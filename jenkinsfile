pipeline {
environment {
registry = "souadcisse1999/tp5"
registryCredential = 'dockerHub'
dockerImage = ''
}
agent any
stages {
stage('Cloning Git') {
steps {
git branch: 'master', url: 'https://github.com/souadCisse/tp4devops.git'
}
}
stage('Building image') {
steps{
script {
dockerImage = docker.build registry + ":$BUILD_NUMBER"
}
}
}
stage('Test image') {
steps{
script {
echo "Tests passed"
}
}
}
stage('Publish Image') {
steps{
script {
docker.withRegistry( '', registryCredential ) {
dockerImage.push()
}
}
}
}
}
}